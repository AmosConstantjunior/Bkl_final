{% extends 'base.html.twig' %}

{% block title %}Edit FicheMaintenance
{% endblock %}

{% block body %}
	<aside class=''>

		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>

		<a class="btn btn-secondary ml-2" href="{{ path('fiche_maintenance_show', {'id': fiche_maintenance.id}) }}">
			<i class="fa fa-chevron-left"></i>
			Retour</a>
		<section id="liste_des_ateliers" style='background-color:white' class=" mt-2 container-fluid">
			<h2 class=" ml-4 d-flex justify-content-center text-dark">Modification de fiche de Maintenance
				{{ fiche_maintenance.id}}</h2>
			<br>

			{{ form_start(form) }}
			<article id='modification_fiche'>
				<h5>Client</h5>
				<div class="form-group">

					{{form_label(form.atelier, 'Atelier')}}
					{{form_widget(form.atelier, {'attr':{'class':'form-control','maxlength':"100", 'required':"required" }})}}

				</div>
				<div class="form-group">
					{{form_label(form.machine, 'Machine')}}
					{{form_widget(form.machine, {'attr':{'class':'form-control','maxlength':"100", 'required':"required" }})}}

				</div>
				<div class="form-group">
					{{form_label(form.Contact, 'Contact')}}
					{{form_widget(form.Contact, {'attr':{'class':'form-control','maxlength':"100", 'required':"required" }})}}

				</div>
				<h5>Devis</h5>
				<div class="form-row">
					<div class="form-group col">
						{{form_label(form.dateIntervention, "Date d'intervention")}}
						{{form_widget(form.dateIntervention, {'attr':{'class':'form-control','maxlength':"200", 'required':"required", 'type':"date" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.CommandeEBP, 'Commande EBP')}}
						{{form_widget(form.CommandeEBP, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.montantConsommable, 'Montant Consommable')}}
						{{form_widget(form.montantConsommable, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.montantHT, 'Montant HT')}}
						{{form_widget(form.montantHT, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
				</div>
				<h5>Notation CQS</h5>
				<div class="form-row">
					<div class="form-group col">
						{{form_label(form.station, 'Station')}}
						{{form_widget(form.station, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.formation, 'Formation')}}
						{{form_widget(form.formation, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.maint, 'Maintenance')}}
						{{form_widget(form.maint, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
					<div class="form-group col">
						{{form_label(form.process, 'Process')}}
						{{form_widget(form.process, {'attr':{'class':'form-control','maxlength':"200", 'required':"required" }})}}
					</div>
				</div>
				<h5>L'atelier</h5>
				<div class="form-row">
					<div class="form-custom-control custom-checkbox col">

						{{form_label(form.valiseCNOMO, 'Présence de la valise CNOMO')}}
						{{form_widget(form.valiseCNOMO,{'attr':{'class':'form-custom-control-input'}})}}
					</div>
					<div class="form-custom-control custom-checkbox col">
						{{form_label(form.cuproBrasage, 'Utilisation du cupro-brasage')}}
						{{form_widget(form.cuproBrasage,{'attr':{'class':'form-custom-control-input'}})}}
					</div>

					<div class="form-custom-control custom-checkbox col">
						{{form_label(form.besoinFormation, 'Besoin de formation')}}
						{{form_widget(form.besoinFormation,{'attr':{'class':'form-custom-control-input'}})}}
					</div>
					<div class="form-custom-control custom-checkbox col">

						{{form_label(form.sondageMonoFace, 'Soudage mono-face')}}
						{{form_widget(form.sondageMonoFace,{'attr':{'class':'form-custom-control-input'}})}}
					</div>
				</div>
				<div class="form-group">

					{{form_label(form.QualiteElectrique, "Qualité de la ligne électrique")}}
					{{form_widget(form.QualiteElectrique, {'attr':{'class':'form-control','maxlength':"200", 'required':"required", 'type':"date" }})}}
				</div>
				<h5>Signature</h5>
				<div class="form-row">
					<div class="form-group col">
						<label for="">Date Prochaine</label>
						{{form_label(form.dateProchaine, "Prochaine intervention")}}
						{{form_widget(form.dateProchaine, {'attr':{'class':'form-control','maxlength':"200", 'required':"required", 'type':"date" }})}}
					</div>
				</div>
				<div class="form-row">
					<div class="form-group col">
						<label class="control-label">Technicien CQS</label>
						<Select maxlength="200" type="text" class="form-control" placeholder="Enter Company Name"></select>
					</div>
					<div class="form-group col">
						{{form_label(form.Technicien, "Technicien")}}
						{{form_widget(form.Technicien, {'attr':{'class':'form-control','maxlength':"200", 'required':"required", 'type':"date" }})}}

					</div>
				</div>
			</article>
			{{ form_widget(form) }}
			<button class="btn ml-2 mb-1">{{ button_label|default('Sauvegarder') }} <i class="fa fa-save"></i></button>
			{{ form_end(form) }}


			{{ include('fiche_maintenance/_delete_form.html.twig') }}
		</section>
	</main>
{% endblock %}
