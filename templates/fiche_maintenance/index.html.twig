{% extends 'base.html.twig' %}

{% block title %}FicheMaintenance index{% endblock %}

{% block body %}
{% if utilisateur != null %}
   <aside class=''>

		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
			<a class="btn btn-secondary float-right mt-3 mr-4 mb-4" href="{{ path('fiche_maintenance_new') }}">
				<i class="fa fa-plus"></i>
				Ajouter une nouvelle Fiche de maintenance</a>
			<h3 class="mt-4 ml-4 d-flex justify-content-center text-light">Liste des fiches de maintenance
			</h3>
		<section id="liste_des_visites"  class=" container-fluid">
			<table id="liste_des_visite_tab" class="table table-fixed">
				<thead>
					<tr>
						<th scope="row" class="col-1">Id</th>
                                <th scope="col" class="col-2">Date interv</th>
                                <th scope="col" class="col-2">Client</th>
                                <th scope="col" class="col-3">Atelier</th>
								<th scope="col" class="col-2">RV</th>
								<th scope="col" class="col-2">Action</th>
					</tr>
				</thead>
				<tbody>
					{% for fiche_maintenance in fiche_maintenances %}

						<tr>
							<td class="col-1">{{ fiche_maintenance.id }}</td>
							<td class="col-2">{{ fiche_maintenance.dateIntervention ? fiche_maintenance.dateIntervention|date('d-m-Y') : '' }}</td>
                            <td class="col-2">{{ fiche_maintenance.atelier.client }}</td>
                            <td class="col-3">{{ fiche_maintenance.atelier }}</td>
							<td class="col-2">{{ fiche_maintenance.dateProchaine ? fiche_maintenance.dateProchaine|date('d-m-Y') : '' }}</td>
							<td class="col-2">
								<a href="{{ path('fiche_maintenance_show', {'id': fiche_maintenance.id}) }}"><i class="fa fa-eye text-danger"></i></a>
								<a href="{{ path('fiche_maintenance_edit', {'id': fiche_maintenance.id}) }}">edit</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Liste vide</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			
		</section>
	</main>
	{% else %}

	{% endif %}
{% endblock %}
