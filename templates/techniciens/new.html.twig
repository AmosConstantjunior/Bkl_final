{% extends 'base.html.twig' %}

{% block title %}New Techniciens
{% endblock %}

{% block body %}
	<aside class='ml-2 mr-2 mt-2 mb-1'>

		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
		<section id="ajouter-technicien" class=" container-fluid">

			<a class="btn btn-secondary" href="{{ path('techniciens_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<h2 class="mt-4 ml-4 d-flex justify-content-center">Ajouter un technicien</h2>
			<article class="mt-4 container-fluid">
				{{ form_start(form) }}
                <div class="form-group">
				{{form_label(form.NomTechnicien, 'Nom : ')}}
                {{form_widget(form.NomTechnicien, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.PrenomTechnicien, 'Pr√©nom :')}}
                {{form_widget(form.PrenomTechnicien, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.email, 'Email :')}}
                {{form_widget(form.email, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.plainPassword, 'Mot de passe :')}}
                {{form_widget(form.plainPassword, {'attr':{'class':'form-control'}})}}
                </div>
				<button class="btn btn-success">{{ button_label|default('Sauvegarder') }}<i class="fa fa-save"></i>
                </button>
				{{ form_end(form) }}
			</article>
		</section>
	</main>

{% endblock %}
