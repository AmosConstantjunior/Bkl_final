{% extends 'base.html.twig' %}

{% block title %}Edit Techniciens
{% endblock %}

{% block body %}
	<aside class=''>

		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>

			<a class="btn btn-secondary ml-2" href="{{ path('techniciens_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
		<section id="ajouter-technicien" class=" container-fluid">
			<h2 class="mt-4 ml-4 d-flex justify-content-center ">Modification des données du technicien</h2>
			<article class="mt-4 container-fluid">
				

								{{ form_start(form) }}
                <div class="form-group">
				{{form_label(form.NomTechnicien, 'Nom : ')}}
                {{form_widget(form.NomTechnicien, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.PrenomTechnicien, 'Prénom :')}}
                {{form_widget(form.PrenomTechnicien, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.email, 'Email :')}}
                {{form_widget(form.email, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="form-group">
                {{form_label(form.plainPassword, 'Mot de passe :')}}
                {{form_widget(form.plainPassword, {'attr':{'class':'form-control'}})}}
                </div>
				<button class="btn btn">{{ button_label|default('Sauvegarder') }} <i class="fa fa-save"></i>
                </button>
				{{ form_end(form) }}

				

				{{ include('techniciens/_delete_form.html.twig') }}
			</article>
		</section>
	</main>
{% endblock %}
