{% extends 'base.html.twig' %}

{% block title %}Techniciens index
{% endblock %}

{% block body %}
{% if utilisateur != null %}
	<aside class=''>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
		<a class="btn btn-secondary float-right mt-3 mr-4 mb-4 " href="{{ path('techniciens_new') }}">
			<i class="fa fa-plus"></i>
			Ajouter un technicien</a>
		<h3 class="mt-4 ml-4 d-flex justify-content-center text-light">Liste des Techniciens
		</h3>
		<section id="liste_des_Techniciens" class=" container-fluid">


			<table id="liste_des_tech_tab" class="table table-striped">


				<thead>
					<tr>
						<th scope="row" class="col-1">Id</th>
						<th scope="col" class="col-3">Nom</th>
						<th scope="col" class="col-3">Prenom</th>
						<th scope="col" class="col-3">Email</th>
						<th scope="col" class="col-2">Action</th>

					</tr>
				</thead>
				<tbody>
					{% for technicien in techniciens %}
						<tr>
							<td class="col-1">{{ technicien.id }}</td>
							<td class="col-3">{{ technicien.NomTechnicien }}</td>
							<td class="col-3">{{ technicien.PrenomTechnicien }}</td>
							<td class="col-3">{{ technicien.email }}</td>
							<td class="col-2">
								<a href="{{ path('techniciens_show', {'id': technicien.id}) }}">
									<i class="text-danger fa fa-eye"></i>
								</a>
								<a href="{{ path('techniciens_edit', {'id': technicien.id}) }}">
									<i class="fa fa-pen"></i>
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>


		</section>
	</main>
{% else %}
	{% endif %}
{% endblock %}
