{{ form_start(form) }}
<div class="form-group">
	{{form_label(form.NomClient, 'Nom du client')}}
	{{form_widget(form.NomClient, {'attr':{'class':'form-control'}})}}
</div>
<div class="form-row">
	<div class="form-group col">
		{{form_label(form.email, 'E-mail')}}
		{{form_widget(form.email, {'attr':{'class':'form-control'}})}}
	</div>
	<div class="form-group col">
		{{form_label(form.NumClient, 'Téléphone')}}
		{{form_widget(form.NumClient, {'attr':{'class':'form-control'}})}}

	</div>
</div>
<div class="form-group">
	{{form_label(form.AdresseLieu, 'Adresse')}}
	{{form_widget(form.AdresseLieu, {'attr':{'class':'form-control'}})}}

</div>
<div class="form-group">
	{{form_label(form.plainPassword, 'Mot de passe')}}
	{{form_widget(form.plainPassword, {'attr':{'class':'form-control', 'id':'motdepasse'}})}}
	<i id="icon" class="fas fa-eye-slash" onclick="togglePassword()"></i>

</div>
<button class="btn btn-success">{{ button_label|default('Save') }} <i class="fa fa-save"></i></button>
{{ form_end(form) }}
