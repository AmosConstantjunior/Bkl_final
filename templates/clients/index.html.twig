{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
   <aside class='ml-2 mr-2 mt-2 mb-1'>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
		<section id="liste_des_Clients" class=" container-fluid">
			<a class="btn btn-secondary float-right mt-3 mr-4 mb-4" href="{{ path('clients_new') }}">
				<i class="fa fa-plus"></i>
				Ajouter un client</a>
			<h3 class="mt-4 ml-4 d-flex justify-content-center">Liste des clients
			</h3>

			<table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom Client</th>
                <th scope="col">Email</th>
                <th scope="col">Adresse</th>
                <th scope="col">Téléphone</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td scope="row">{{ client.id }}</td>
                <td scope="row">{{ client.NomClient }}</td>
                <td scope="row">{{ client.email }}</td>
                <td scope="row">{{ client.AdresseLieu }}</td>
                <td scope="row">{{ client.NumClient }}</td>
                <td scope="row">
                    <a href="{{ path('clients_show', {'id': client.id}) }}"><i class="fa fa-eye"></i></a>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

   </section>
	</main>
{% endblock %}
