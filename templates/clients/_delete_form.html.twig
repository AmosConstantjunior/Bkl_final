<form method="post" action="{{ path('clients_delete', {'id': client.id}) }}" onsubmit="return confirm('Vouliez vous vraiment supprimer ce client ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="btn btn-danger mt-4">Supprimer <i class="fa fa-trash"></i></button>
</form>
