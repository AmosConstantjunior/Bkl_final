{% extends 'base.html.twig' %}

{% block title %}New Marque
{% endblock %}

{% block body %}
	<aside class=''>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>

			<a class="btn btn-secondary ml-2" href="{{ path('marque_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<h2 class="mt-4 ml-4 d-flex justify-content-center text-light">Ajouter une marque</h2>
		<section id="ajouter_technicien" class=" container-fluid">
			<article class="mt-4 container-fluid">
				{{ form_start(form) }}
				<div class="form-group">
					{{form_label(form.NomMarque, 'Nom de la marque')}}
					{{form_widget(form.NomMarque, {'attr':{'class':'form-control'}})}}
				</div>
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}<i class="fa fa-save"></i>
				</button>
				{{ form_end(form) }}
			</article>
		</section>
	</main>
{% endblock %}
