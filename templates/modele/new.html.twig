{% extends 'base.html.twig' %}

{% block title %}New Modele
{% endblock %}

{% block body %}
	<aside class=''>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>

			<a class="btn btn-secondary" href="{{ path('modele_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<h2 class="mt-4 ml-4 d-flex justify-content-center text-light">Ajouter un model</h2>
		<section id="ajouter_technicien" style="background-color:white; height:60vh" class=" container-fluid">
		<br>
			<article class="mt-4 container-fluid">
				{{ form_start(form) }}
				<div class="form-row">
                    <div class="form-group col">
                    {{form_label(form.Intituler, 'Nom du model')}}
                    {{form_widget(form.Intituler, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="form-group col">
                    {{form_label(form.marque, 'Nom de la marque')}}
                    {{form_widget(form.marque, {'attr':{'class':'form-control'}})}}
                    </div>
                </div>
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form) }}

			</article>
		</section>
	</main>
{% endblock %}
