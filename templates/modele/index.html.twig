{% extends 'base.html.twig' %}

{% block title %}Modele index{% endblock %}

{% block body %}
{% if utilisateur != null %}
    <aside class=''>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
			<a class="btn btn-secondary float-right mt-3 mr-4 mb-4" href="{{ path('modele_new') }}">
				<i class="fa fa-plus"></i>
				Ajouter un model</a>
		<section id="liste_des_models" style="background-color:white" class=" container-fluid">
			<h3 class="mt-4 ml-4 d-flex justify-content-center ">Liste des models
			</h3>

			<table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Intituler</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modele in modeles %}
            <tr>
                <td scope="row">{{ modele.id }}</td>
                <td scope="row">{{ modele.Intituler }}</td>
                <td scope="row">
                    {# <a href="{{ path('modele_show', {'id': modele.id}) }}">show</a> #}
                    <a href="{{ path('modele_edit', {'id': modele.id}) }}"><i class="fa fa-pen"></i></a>
                   
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 </section>
	</main>
{% else %}
    {% endif %}
{% endblock %}
