{% extends 'base.html.twig' %}

{% block title %}Edit Modele
{% endblock %}

{% block body %}
	{% if utilisateur != null %}
		<aside class=''>

			{% include "Templates_parts/aside.html.twig" %}
		</aside>
		<main>
			<nav id="menu_admin" class="mt-4">
				{% include "Templates_parts/_nav.html.twig" %}
			</nav>
			<hr>
			<a class="btn btn-secondary ml-2" href="{{ path('modele_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<section id="liste_des_ateliers" style='background-color:white' class=" mt-2 container-fluid">
				<h2 class=" ml-4 d-flex justify-content-center text-dark">Modification des données du modèle
				</h2>
				<br>


				<article class="mt-4 container-fluid">


					{{ form_start(form) }}
					<div class="form-row">
						<div class="form-group col">
							{{form_label(form.Intituler, 'Nom du model')}}
							{{form_widget(form.Intituler, {'attr':{'class':'form-control'}})}}
						</div>
						<div class="form-group col">
							{{form_label(form.marque, 'Nom de la marque')}}
							{{form_widget(form.marque, {'attr':{'class':'form-control'}})}}
						</div>
					</div>
					<button class="btn ">{{ button_label|default('Enregistrer') }}
						<fa class="fa fa-save"></fa>
					</button>
					{{ form_end(form) }}


				</article>
				{{ include('modele/_delete_form.html.twig') }}
			</section>
		</main>
		{% else %}
	{% endif %}
{% endblock %}
