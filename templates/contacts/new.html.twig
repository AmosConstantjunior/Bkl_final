{% extends 'base.html.twig' %}

{% block title %}New Contacts
{% endblock %}

{% block body %}
	<aside class='ml-2 mr-2 mt-2 mb-1'>

		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
		<section id="ajouter_technicien" class=" container-fluid">

			<a class="btn btn-secondary" href="{{ path('contacts_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<h2 class="mt-4 ml-4 d-flex justify-content-center">Ajouter un contact</h2>
			<article class="mt-4 container-fluid">
				{{ form_start(form) }}
				<div class="form-group">
                {{form_label(form.NomContact, 'Nom ')}}
                {{form_widget(form.NomContact, {'attr':{'class':'form-control', 'placeholder':"Nom du contact"}})}}
                </div>
                <div class="form-group">
                {{form_label(form.PrenomContact, 'Prénom ')}}
                {{form_widget(form.PrenomContact, {'attr':{'class':'form-control', 'placeholder':"Prénom du contact"}})}}
                </div>
                <div class="form-group">
                {{form_label(form.TelContact, 'Téléphone')}}
                {{form_widget(form.TelContact, {'attr':{'class':'form-control'}})}}
                
                </div>
                <div class="form-row">
                <div class="form-group col-4">
                {{form_label(form.client, 'Entreprise')}}
                {{form_widget(form.client, {'attr':{"class":'form-control'}})}}
                </div>
                <div class="form-group col-4">
                {{form_label(form.atelier, 'Atelier')}}
                {{form_widget(form.atelier, {'attr':{"class":'form-control'}})}}
                </div>
                <div class="form-group col-4">
                {{form_label(form.poste, 'Poste')}}
                {{form_widget(form.poste, {'attr':{"class":'form-control'}})}}
                </div>
                </div>
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}<i class="fa fa-save"></i></button>
				{{ form_end(form) }}

			</article>
		</section>
	</main>

{% endblock %}
