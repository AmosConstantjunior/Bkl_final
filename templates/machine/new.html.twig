{% extends 'base.html.twig' %}

{% block title %}New Machine
{% endblock %}

{% block body %}
	<aside class='ml-2 mr-2 mt-2 mb-1'>
		{% include "Templates_parts/aside.html.twig" %}
	</aside>
	<main>
		<nav id="menu_admin" class="mt-4">
			{% include "Templates_parts/_nav.html.twig" %}
		</nav>
		<hr>
		<section id="ajouter_technicien" class=" container-fluid">

			<a class="btn btn-secondary" href="{{ path('machine_index') }}">
				<i class="fa fa-chevron-left"></i>
				Retour</a>
			<h2 class="mt-4 ml-4 d-flex justify-content-center">Ajouter une machine</h2>
			<article class="mt-4 container-fluid">
				{{ form_start(form) }}
<div class="form-row">
<div class="form-group col">
{{form_label(form.NumSerie, 'Numéro de série')}}
{{form_widget(form.NumSerie, {'attr':{'class':'form-control'}})}}
</div>
<div class="form-group col">
{{form_label(form.modele, 'Model')}}
{{form_widget(form.modele, {'attr':{'class':'form-control'}})}}
</div>
</div>
<div class="form-group">
{{form_label(form.atelier, 'Atelier')}}
{{form_widget(form.atelier, {'attr':{'class':'form-control'}})}}

</div>
				<button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>
				{{ form_end(form) }}

			</article>
		</section>
	</main>
{% endblock %}
